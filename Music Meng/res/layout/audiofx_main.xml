<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	
    <RelativeLayout 
    	android:id="@+id/RLEnable" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"
    	android:paddingLeft="10dip"
    	android:paddingRight="10dip"
    	android:focusable="true"
    	android:background="@android:drawable/list_selector_background"
    	android:gravity="center_vertical"
    	>
    	<TextView
    		android:id="@+id/txtEnable"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:text="@string/enable_effects"
	    	android:textSize="20sp"
	    	android:textColor="#FFFFFFFF"
	    	android:layout_alignParentLeft="true"
	    	android:layout_toLeftOf="@+id/cb_enabled"
	    	android:layout_centerVertical="true"
	    	android:singleLine="true"
	    	android:ellipsize="marquee"
	    	/>
	    	
	    <CheckBox 
	    	android:layout_height="wrap_content" 
	    	android:layout_width="wrap_content" 
	    	android:id="@+id/cb_enabled"
	    	android:layout_alignParentRight="true" />
    </RelativeLayout>

    <TextView
    	android:text="@string/effects_list_title"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="10dip"
    	android:background="#66dddddd"
    	/>



	
	<ListView 
		android:id="@android:id/list"
		android:layout_width="wrap_content" 
		android:layout_height="match_parent"
		android:drawSelectorOnTop="false">
	</ListView>


</LinearLayout>
